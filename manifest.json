{
  "manifest_version": 3,
  "name": "Web Weaver Lightning",
  "short_name": "WebWeaver", 
  "description": "FREE AI-powered webpage extraction with Gemini 2.0 Flash - Day 5 validation ready.",
  "version": "1.0.5",
  "author": "Web Weaver Team",
  "permissions": [
    "scripting",
    "activeTab",
    "downloads", 
    "storage",
    "contextMenus",
    "alarms"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": { 
    "service_worker": "background.js"
  },
  "action": { 
    "default_popup": "popup.html",
    "default_title": "Web Weaver Lightning - Day 5 Validation Ready"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  "minimum_chrome_version": "88"
}
