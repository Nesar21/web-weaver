{
    "manifest_version": 3,
    "name": "üèÜ Web Weaver Lightning - Day 8 REAL",
    "version": "8.1.0", 
    "description": "Day 8 REAL Cross-Site Testing - No Simulations, Pure Accuracy Measurement",
    
    "permissions": [
        "activeTab",
        "tabs", 
        "storage",
        "scripting"
    ],
    
    "host_permissions": [
        "<all_urls>"
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "Web Weaver Lightning - Day 8 REAL Testing"
    },
    
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    
    "web_accessible_resources": [{
        "resources": ["validation.js"],
        "matches": ["<all_urls>"]
    }]
}
